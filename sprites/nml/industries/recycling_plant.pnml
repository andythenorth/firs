item(FEAT_INDUSTRYTILES, THIS_ID(tile), 201) {
	property {
		substitute:       0;
		accepted_cargos:  [[RCYC, 8]];
		land_shape_flags: bitmask(LSF_ONLY_ON_FLAT_LAND);
	}
	graphics {
		tile_check: THIS_ID(tile_location_check);
		THIS_ID(tile_fences);
	}
}

